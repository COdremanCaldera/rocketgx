<div class="title text-center m-4"><h1><%= @videogame.title %></h1></div>
<div class="d-flex justify-content-center mb-4" id="card_videogame">
  <div class="card_videogame d-flex p-5 align-items-center">
    <div class="img_videogame">
      <%= cl_image_tag @videogame.photo.key if @videogame.photo.key %>
    </div>
    <div class="card-product-infos p-5">
      <div>
        <h2>Price: $<%= @videogame.price %></h2>
        <p>Rating: <%= @videogame.rating %></p>
        <p>Due√±o: <strong><%= link_to @videogame.user.first_name, videogame_seller_profile_path(videogame_id: @videogame, id: @videogame.user ) %></strong></p>
      </div>
      <div>
        <% if current_user == @videogame.user%>
          <%= link_to videogame_path(@videogame), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            Eliminar <i class="fa-solid fa-trash" style="color:red"></i>
          <% end %>
        <% else %>
          <div>
            <%= link_to new_videogame_purchase_path(@videogame) do %>
              <button type="submit" class="btn btn-success" id="btn_buy">Agregar al Carrito</button>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
